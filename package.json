{
  "name": "k42un0k0gitclient",
  "version": "1.0.0",
  "main": "./build/main.js",
  "homepage": "./",
  "repository": "https://github.com/k42un0k0/k42un0k0gitclient.git",
  "author": "k42un0k0 <k42un0k0.put1put1@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "run-p watch:electron start:*",
    "start:web": "cross-env BROWSER=\"none\" react-scripts start",
    "start:electron": "cross-env ELECTRON_START_URL=\"http://localhost:3000\" electron .",
    "build":"run-p build:*",
    "build:web": "react-scripts build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "package":"run-s build:* package:electron",
    "package:electron":"electron-builder",
    "watch:electron": "yarn build:electron --watch",
    "test:web": "react-scripts test"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "cross-env": "^7.0.3",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "electron-reload": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "extends": null,
    "files":["build"],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
